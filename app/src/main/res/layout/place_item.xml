<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="12dp"
    app:cardCornerRadius="4dp">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:layout_gravity="center_vertical">

        <TextView android:id="@+id/placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"/>

        <TextView android:id="@+id/placeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom">

        <ImageButton
            android:id="@+id/setHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/savePlace"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_add_place"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/removePlace"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_remove_place"
            android:layout_marginStart="10dp"/>


    </LinearLayout>




</com.google.android.material.card.MaterialCardView>